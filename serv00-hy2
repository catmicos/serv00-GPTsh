#!/bin/bash
# 介绍信息
{
    echo -e "\e[92m" 
    echo "                       |\__/,|   (`\\ " 
    echo "                     _.|o o  |_   ) )"
    echo "       -------------(((---(((-------------------"
    echo "                           catmi "
    echo "       -----------------------------------------"
    echo -e "\e[0m"  
}
# 获取当前用户名和工作目录
USER=$(whoami)
USER_HOME=$(readlink -f /home/$USER)
HYSTERIA_WORKDIR="$USER_HOME/.hysteria"

# 创建必要的目录
[ ! -d "$HYSTERIA_WORKDIR" ] && mkdir -p "$HYSTERIA_WORKDIR"

# 随机生成密码
generate_password() {
  export PASSWORD=${PASSWORD:-$(uuidgen)}
}

# 设置服务器端口
set_server_port() {
  read -p "请输入 hysteria2 端口 (默认 20026): " input_port
  export SERVER_PORT="${input_port:-20026}"
}

# 下载 Hysteria 2
download_hysteria() {
  echo "正在下载最新的 Hysteria..."
  ARCH=$(uname -m)
  DOWNLOAD_DIR="$HYSTERIA_WORKDIR"

  if [[ "$ARCH" == "amd64" || "$ARCH" == "x86_64" ]]; then
    DOWNLOAD_URL="https://github.com/apernet/hysteria/releases/latest/download/hysteria-linux-amd64"
  elif [[ "$ARCH" == "arm64" || "$ARCH" == "aarch64" ]]; then
    DOWNLOAD_URL="https://github.com/apernet/hysteria/releases/latest/download/hysteria-linux-arm64"
  else
    echo "不支持的架构: $ARCH"
    exit 1
  fi

  curl -L -o "$DOWNLOAD_DIR/hysteria" "$DOWNLOAD_URL"
  
  if [ ! -f "$DOWNLOAD_DIR/hysteria" ]; then
    echo "Hysteria 下载失败，请检查 URL。"
    exit 1
  fi

  chmod +x "$DOWNLOAD_DIR/hysteria"
  echo "下载完成"
}

# 生成证书
generate_cert() {
  openssl req -x509 -nodes -newkey ec:<(openssl ecparam -name prime256v1) \
  -keyout "$HYSTERIA_WORKDIR/server.key" -out "$HYSTERIA_WORKDIR/server.crt" \
  -subj "/CN=bing.com" -days 36500
}

# 生成配置文件
generate_config() {
  cat << EOF > "$HYSTERIA_WORKDIR/config.yaml"
listen: :$SERVER_PORT

tls:
  cert: $HYSTERIA_WORKDIR/server.crt
  key: $HYSTERIA_WORKDIR/server.key

auth:
  type: password
  password: "$PASSWORD"

fastOpen: true

masquerade:
  type: proxy
  proxy:
    url: https://bing.com
    rewriteHost: true

transport:
  udp:
    hopInterval: 30s
EOF
}

# 运行 Hysteria
run_hysteria() {
  if [ -f "$HYSTERIA_WORKDIR/hysteria" ]; then
    nohup "$HYSTERIA_WORKDIR/hysteria" server -c "$HYSTERIA_WORKDIR/config.yaml" >/dev/null 2>&1 &
    echo -e "\e[1;32mHysteria 2 正在运行\e[0m"
  else
    echo -e "\e[1;31mHysteria 2 未找到，请检查下载是否成功\e[0m"
    exit 1
  fi
}

# 获取 IP 地址
get_ip() {
  ipv4=$(curl -s 4.ipw.cn)
  if [[ -n "$ipv4" ]]; then
    HOST_IP="$ipv4"
  else
    ipv6=$(curl -s --max-time 1 6.ipw.cn)
    if [[ -n "$ipv6" ]]; then
      HOST_IP="$ipv6"
    else
      echo -e "\e[1;35m无法获取IPv4或IPv6地址\033[0m"
      exit 1
    fi
  fi
  echo -e "\e[1;32m本机IP: $HOST_IP\033[0m"
}

# 输出配置
print_config() {
  ISP=$(curl -s https://speed.cloudflare.com/meta | awk -F\" '{print $26"-"$18}' | sed -e 's/ /_/g')
  
  echo -e "\e[1;32mHysteria2 安装成功\033[0m"
  echo -e "\e[1;33mV2rayN或Nekobox 配置\033[0m"
  echo -e "\e[1;32mhysteria2://$PASSWORD@$HOST_IP:$SERVER_PORT/?sni=www.bing.com&alpn=h3&insecure=1#$ISP\033[0m"
}

# 安装 Hysteria
install_hysteria() {
  generate_password
  set_server_port
  download_hysteria
  generate_cert
  generate_config
  run_hysteria
  get_ip
  print_config
}

# 主程序
read -p "是否安装 Hysteria 2？(Y/N 回车N): " install_hysteria_answer
install_hysteria_answer=${install_hysteria_answer^^}

if [[ "$install_hysteria_answer" == "Y" ]]; then
  install_hysteria
fi
